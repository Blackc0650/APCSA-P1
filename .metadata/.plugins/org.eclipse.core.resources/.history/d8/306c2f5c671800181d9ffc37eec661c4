package labs.unit7;
import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;
public class Triples
{
   public static int number;

	public Triples()
	{
		this(0);
	}

	public Triples(int num)
	{
		number = num;
	}

	public void setNum(int num)
	{
		number = num;

	}
	
	public static int greatestCommonFactor(int a, int b, int c)
	{
		int[] aFactors,bFactors,cFactors;
		aFactors = preformWhileArray(a);
		bFactors = preformWhileArray(b);
		cFactors = preformWhileArray(c);
		ArrayList<Integer> mutipl = new ArrayList<Integer>();
		for(int a2 : aFactors) {
			for(int b2 : bFactors) {
				for(int c2 : cFactors) {
					if(a2 == b2 && b2 == c2) {
						mutipl.add(a2);
					}
				}
			}
		}
		int gcf = 1;
		for(int i : mutipl) {
			gcf *= i;
		}
		return gcf;
		
	}
	public static int[] preformWhileArray(int i) {
		i /= 2;
		int count = i;
		int whilecount = 0;
		int[] factors = new int[number];
		while(count > 0) {
			if((double)((i / count) % 1) == 0) {
				System.out.println((double) i/count);
				factors[whilecount] = count;
				System.out.println(count);
			}
			count--;
			whilecount++;
		}
		Arrays.sort(factors);
		return factors;
	}

	public String toString()
	{
		String output="";






		return output+"\n";
	}
}