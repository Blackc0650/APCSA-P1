import java.util.Scanner;
import static java.lang.System.*;

public class TicTacToe {
	private char[][] mat;
	public TicTacToe() {
		mat = new char[0][0];
	}

	public TicTacToe(String game) {
		mat = new char[3][3];
		int count = 0,row = 0;
		for(char c : game.toCharArray()) {
			if(count % 3 == 0) {
				row++;
				count = 0;
			}
			System.out.println(row - 1 + " | " + count);
			mat[row - 1][count] = c;
			count++;
		}
		for(char[] c : mat) {
			String s = "";
			for(char cc : c) {
				s+=cc;
			}
			System.out.println(s);
		}
	}
	public String getWinner() {

		return "";
	}

	public String toString() {
		String output="";

		return output+"\n\n";
	}
}